<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">

                    <LinearLayout
                        android:layout_width="350dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"

                            android:layout_marginLeft="16px"
                            android:layout_weight="0"
                            android:src="@drawable/roominlogo"
                            tools:layout_editor_absoluteX="16dp"
                            tools:layout_editor_absoluteY="16dp" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="37dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="220dp"
                            android:layout_weight="0"
                            android:src="@drawable/alram"
                            tools:layout_editor_absoluteX="371dp"
                            tools:layout_editor_absoluteY="16dp" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="340dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:gravity="left|center"
                            android:text="아직 호텔을 등록하지 않으셨나요?\n호텔을 등록하고, 루민을 이용해보세요☺"
                            android:textSize="13dp"
                            android:fontFamily="@font/gmarketsansmedium"
                            android:textColor="#fff"
                            app:cornerRadius="15dp"
                            android:paddingLeft="15dp"
                            tools:layout_editor_absoluteX="16dp"
                            tools:layout_editor_absoluteY="58dp"
                            android:background="@drawable/roomin_banner"
                            />

                        <Button
                            android:id="@+id/button4"
                            android:layout_width="64dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center|right"
                            android:layout_marginEnd="30dp"
                            android:backgroundTint="#FF617D"
                            android:inputType="textAutoComplete"
                            android:text="등록하기"
                            android:fontFamily="@font/gmarketsansmedium"
                            android:textColor="#fff"
                            android:background="@drawable/round_button_3"
                            android:textAllCaps="false"
                            android:textSize="13dp"
                            app:cornerRadius="20dp" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="330dp"
                            android:layout_height="170dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="wrap_content"
                                android:layout_height="184dp"
                                android:layout_gravity="right"
                                android:layout_marginStart="0dp"
                                android:src="@drawable/card_export" />

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0px"
                                android:layout_marginTop="75dp"
                                android:text="루다님,\n체크인 하시겠어요?"
                                android:textSize="25sp" />

                        </FrameLayout>

                        <com.google.android.flexbox.FlexboxLayout
                            android:layout_width="330dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="15dp"
                            app:justifyContent="space_between">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageButton
                                    android:id="@+id/button5"
                                    android:layout_width="160dp"
                                    android:layout_height="120dp"
                                    android:background="@drawable/round_button_3"
                                    android:backgroundTint="#fff"
                                    />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/hotel_icon"
                                    android:id="@+id/hotel_imageview"
                                    android:layout_gravity="end|bottom"
                                    android:paddingEnd="20dp"
                                    android:paddingBottom="20dp"
                                    ></ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="내 호텔"
                                    android:gravity="left"
                                    android:textSize="17dp"
                                    android:textColor="#494949"
                                    android:fontFamily="@font/gmarketsansmedium"
                                    android:paddingTop="15dp"
                                    android:paddingLeft="15dp"
                                    />

                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageButton
                                    android:id="@+id/button6"
                                    android:layout_width="160dp"
                                    android:layout_height="120dp"
                                    android:background="@drawable/round_button_3"
                                    android:backgroundTint="#fff"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="체크인"
                                    android:gravity="left"
                                    android:textSize="17dp"
                                    android:textColor="#494949"
                                    android:fontFamily="@font/gmarketsansmedium"
                                    android:paddingTop="15dp"
                                    android:paddingLeft="15dp"
                                    />
                                <Button
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:backgroundTint="#494949"
                                    android:background="@drawable/round_button_3"
                                    android:text=""
                                    android:layout_gravity="bottom"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginLeft="10dp"
                                    />
                                <Button
                                    android:layout_width="7dp"
                                    android:layout_height="7dp"
                                    android:backgroundTint="#FF617D"
                                    android:background="@drawable/round_button_3"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="65dp"
                                    />


                            </FrameLayout>

                        </com.google.android.flexbox.FlexboxLayout>

                        <ImageButton
                            android:id="@+id/imageButton"
                            android:layout_width="350dp"
                            android:background="#fff"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/roomin_banner_2"
                            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                        <HorizontalScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:paddingLeft="16dp"
                                >

                                <ImageButton
                                    android:id="@+id/button8"
                                    android:layout_width="130dp"
                                    android:layout_height="140dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_weight="0"
                                    android:text="Button"
                                    android:background="@drawable/main_button"

                                    />

                                <ImageButton
                                    android:id="@+id/button9"
                                    android:layout_width="130dp"
                                    android:layout_height="140dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_weight="0"
                                    android:text="Button"
                                    android:background="@drawable/main_button2"

                                    />

                                <ImageButton
                                    android:id="@+id/button10"
                                    android:layout_width="130dp"
                                    android:layout_height="140dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_weight="0"
                                    android:text="Button"
                                    android:background="@drawable/main_button3"
                                    />

                                <ImageButton
                                    android:id="@+id/button11"
                                    android:layout_width="130dp"
                                    android:layout_height="140dp"
                                    android:layout_weight="0"
                                    android:text="Button"
                                    android:background="@drawable/main_button4"
                                    />
                            </LinearLayout>
                        </HorizontalScrollView>

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>