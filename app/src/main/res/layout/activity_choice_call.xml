<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChoiceCall">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="35dp"
        android:backgroundTint="@color/white"
        android:text="&lt;"
        android:textColor="#777777"
        android:fontFamily="@font/gmarketsansmedium"
        android:textColorHint="#777777"
        android:textSize="25dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/gmarketsansmedium"
        android:text="모닝콜"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="-95dp"
        android:layout_marginTop="130dp"
        android:orientation="horizontal"
        android:background="@drawable/backcall">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="#000000"
            android:layout_marginLeft="25dp"
            android:src="@drawable/call" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-205dp"
        android:layout_marginTop="320dp"
        android:fontFamily="@font/gmarketsansbold"
        android:text="모닝콜"
        android:textColor="#494949"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="78dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="-65dp"
        android:layout_marginLeft="160dp"
        android:background="@drawable/backboxgray">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:text="수정하기"
            android:textSize="13dp"
            android:textColor="#FBFBFB" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="68dp"
        android:layout_marginLeft="-315dp"
        android:layout_marginTop="370dp"
        android:background="@drawable/backgroundtest">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:text="시간"
            android:layout_gravity="center_vertical"
            android:textSize="16dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundtext"
            android:text="2월 3일 오전 9:30"
            android:fontFamily="@font/gmarketsansmedium"
            android:textSize="16dp"
            android:layout_marginLeft="107dp"
            android:layout_gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="68dp"
        android:layout_marginLeft="-328dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/backgroundtest">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:text="모닝콜 수단"
            android:layout_gravity="center_vertical"
            android:textSize="16dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:background="@drawable/backgroundtext"
            android:fontFamily="@font/gmarketsansmedium"
            android:padding="7dp"
            android:text="룸 전화"
            android:textSize="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundtext"
            android:text="휴대폰"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:padding="7dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="68dp"
        android:layout_marginLeft="-328dp"
        android:layout_marginTop="530dp"
        android:background="@drawable/backgroundtest">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:text="요청사항"
            android:layout_gravity="center_vertical"
            android:textSize="16dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundtext"
            android:text="없음"
            android:fontFamily="@font/gmarketsansmedium"
            android:textSize="16dp"
            android:layout_marginLeft="165dp"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:padding="7dp"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/round_button_3"
        android:id="@+id/button_select"
        android:layout_width="328dp"
        android:layout_height="68dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="-332dp"
        android:textColor="#FBFBFB"
        android:text="작성하기"
        android:textSize="16dp"
        android:fontFamily="@font/gmarketsansmedium"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</LinearLayout>
