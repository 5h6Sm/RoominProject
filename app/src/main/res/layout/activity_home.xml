<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/fragment_container"
    android:backgroundTint="#fff"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="863dp"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0">

                        <LinearLayout
                            android:layout_width="350dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"

                                android:layout_marginLeft="16px"
                                android:layout_weight="0"
                                android:src="@drawable/roominlogo"
                                tools:layout_editor_absoluteX="16dp"
                                tools:layout_editor_absoluteY="16dp" />

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="37dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginLeft="220dp"
                                android:layout_weight="0"
                                android:src="@drawable/alram"
                                tools:layout_editor_absoluteX="371dp"
                                tools:layout_editor_absoluteY="16dp" />
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp">

                            <Button
                                android:id="@+id/button3"
                                android:layout_width="340dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:background="@drawable/roomin_banner"
                                android:fontFamily="@font/gmarketsansmedium"
                                android:gravity="left|center"
                                android:paddingLeft="15dp"
                                android:text="아직 호텔을 등록하지 않으셨나요?\n호텔을 등록하고, 루민을 이용해보세요☺"
                                android:textColor="#fff"
                                android:textSize="13dp"
                                app:cornerRadius="15dp"
                                tools:layout_editor_absoluteX="16dp"
                                tools:layout_editor_absoluteY="58dp" />

                            <Button
                                android:id="@+id/button4"
                                android:layout_width="64dp"
                                android:layout_height="35dp"
                                android:layout_gravity="center|right"
                                android:layout_marginEnd="45dp"
                                android:background="@drawable/round_button_3"
                                android:backgroundTint="#FF617D"
                                android:fontFamily="@font/gmarketsansmedium"
                                android:inputType="textAutoComplete"
                                android:text="등록하기"
                                android:textAllCaps="false"
                                android:textColor="#fff"
                                android:textSize="13dp"
                                app:cornerRadius="20dp" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="330dp"
                                android:layout_height="170dp"
                                android:layout_gravity="center">

                                <ImageView
                                    android:id="@+id/imageView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="184dp"
                                    android:layout_gravity="right"
                                    android:layout_marginStart="0dp"
                                    android:src="@drawable/card_export" />

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="0px"
                                    android:layout_marginTop="75dp"
                                    android:text="루다님,\n체크인 하시겠어요?"
                                    android:textSize="25sp" />

                            </FrameLayout>

                            <com.google.android.flexbox.FlexboxLayout
                                android:layout_width="330dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="15dp"
                                app:justifyContent="space_between">

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageButton
                                        android:id="@+id/myhotel"
                                        android:layout_width="160dp"
                                        android:layout_height="120dp"
                                        android:background="@drawable/round_button_3"
                                        android:backgroundTint="#fff" />



                                    <ImageView
                                        android:id="@+id/hotel_imageview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end|bottom"
                                        android:paddingEnd="20dp"
                                        android:paddingBottom="20dp"
                                        android:src="@drawable/hotel_icon"></ImageView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/gmarketsansmedium"
                                        android:gravity="left"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="15dp"
                                        android:text="내 호텔"
                                        android:textColor="#494949"
                                        android:textSize="17dp" />

                                </FrameLayout>

                                <FrameLayout
                                    android:id="@+id/checkInButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageButton
                                        android:id="@+id/button6"
                                        android:layout_width="160dp"
                                        android:layout_height="120dp"
                                        android:background="@drawable/round_button_3"
                                        android:backgroundTint="#fff"

                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/gmarketsansmedium"
                                        android:gravity="left"
                                        android:paddingLeft="15dp"
                                        android:paddingTop="15dp"
                                        android:text="체크인"
                                        android:textColor="#494949"
                                        android:textSize="17dp" />



                                    <Button
                                        android:layout_width="7dp"
                                        android:layout_height="7dp"
                                        android:layout_marginLeft="65dp"
                                        android:layout_marginTop="10dp"
                                        android:background="@drawable/round_button_3"
                                        android:backgroundTint="#FF617D" />


                                </FrameLayout>

                            </com.google.android.flexbox.FlexboxLayout>

                            <ImageButton
                                android:id="@+id/imageButton"
                                android:layout_width="350dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="20dp"
                                android:background="#fff"
                                android:src="@drawable/roomin_banner_2"
                                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                            <HorizontalScrollView
                                android:layout_width="wrap_content"
                                android:layout_height="230dp"

                                >

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="40dp"
                                    android:layout_marginBottom="15dp"
                                    android:paddingLeft="16dp"

                                    >

                                    <ImageButton
                                        android:id="@+id/button8"
                                        android:layout_width="130dp"
                                        android:layout_height="140dp"
                                        android:layout_marginRight="15dp"
                                        android:layout_weight="0"
                                        android:background="@drawable/main_button"
                                        android:text="Button"

                                        />

                                    <ImageButton
                                        android:id="@+id/button9"
                                        android:layout_width="130dp"
                                        android:layout_height="140dp"
                                        android:layout_marginRight="15dp"
                                        android:layout_weight="0"
                                        android:background="@drawable/main_button2"
                                        android:text="Button"

                                        />

                                    <ImageButton
                                        android:id="@+id/button10"
                                        android:layout_width="130dp"
                                        android:layout_height="140dp"
                                        android:layout_marginRight="15dp"
                                        android:layout_weight="0"
                                        android:background="@drawable/main_button3"
                                        android:text="Button" />

                                    <ImageButton
                                        android:id="@+id/button11"
                                        android:layout_width="130dp"
                                        android:layout_height="140dp"
                                        android:layout_weight="0"
                                        android:background="@drawable/main_button4"
                                        android:text="Button" />
                                </LinearLayout>
                            </HorizontalScrollView>

                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
        <FrameLayout
            android:id="@+id/my_frame_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="300dp"
                android:layout_height="500dp"
                android:background="#fff"
                android:id="@+id/qr_back"
                android:elevation="20dp"
                />
        </FrameLayout>
        </FrameLayout>
</LinearLayout>