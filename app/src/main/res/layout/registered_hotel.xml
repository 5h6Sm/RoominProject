            </LinearLayout>

            <Button
                android:id="@+id/button32"
                android:layout_width="370dp"
                android:layout_height="65dp"
                android:gravity="center"
                android:text="다음"
                app:cornerRadius="30px" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>