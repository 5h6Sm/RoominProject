<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choosetxt"
        android:textAlignment="center"
        android:text="서비스 요청서"
        android:textColor="#494949"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:fontFamily="@font/gmarketsansmedium"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="10dp"
        android:textColor="#A4A4A4"
        android:text="시간 선택"
        android:textSize="12dp"
        android:fontFamily="@font/gmarketsansmedium"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <NumberPicker
            android:id="@+id/day_datepicker"
            android:layout_width="80dp"
            android:layout_height="124dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:theme="@style/NumberPicker" />

        <NumberPicker
            android:id="@+id/hour_datepicker"
            android:layout_width="50dp"
            android:layout_height="124dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:theme="@style/NumberPicker" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="124dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:gravity="center"
            android:text=":"
            android:textSize="18dp" />

        <NumberPicker
            android:id="@+id/minute_datepicker"
            android:layout_width="50dp"
            android:layout_height="124dp"
            android:layout_gravity="right"
            android:theme="@style/NumberPicker" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택"
        android:textColor="#A4A4A4"
        android:fontFamily="@font/gmarketsansmedium"
        android:layout_marginLeft="29dp"
        android:textSize="12dp"/>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <CheckBox
            android:fontFamily="@font/gmarketsansmedium"
            android:id="@+id/toggleButton1"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:text="물"
            android:textColor="#D1D1D1"
            android:background="@drawable/toggle_button_background"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:textSize="16dp"
            android:radius="16dp"
            android:gravity="center"
            android:button="@null"/>
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <CheckBox
            android:fontFamily="@font/gmarketsansmedium"
            android:id="@+id/toggleButton2"
            android:layout_width="101dp"
            android:layout_height="36dp"
            android:text="오렌지주스"
            android:textColor="#D1D1D1"
            android:background="@drawable/toggle_button_background"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:textSize="16dp"
            android:radius="16dp"
            android:gravity="center"
            android:button="@null" />

        <CheckBox
            android:fontFamily="@font/gmarketsansmedium"
            android:id="@+id/toggleButton3"
            android:layout_width="86dp"
            android:layout_height="36dp"
            android:text="포도주스"
            android:textColor="#D1D1D1"
            android:background="@drawable/toggle_button_background"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:textSize="16dp"
            android:radius="16dp"
            android:gravity="center"
            android:button="@null" />
        <CheckBox
            android:fontFamily="@font/gmarketsansmedium"
            android:id="@+id/toggleButton7"
            android:layout_width="55dp"
            android:layout_height="36dp"
            android:text="콜라"
            android:textColor="#D1D1D1"
            android:background="@drawable/toggle_button_background"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:textSize="16dp"
            android:radius="16dp"
            android:gravity="center"
            android:button="@null" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:fontFamily="@font/gmarketsansmedium"
            android:id="@+id/toggleButton4"
            android:layout_width="117dp"
            android:layout_height="36dp"
            android:text="포카리스웨트"
            android:textColor="#D1D1D1"
            android:background="@drawable/toggle_button_background"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:textSize="16dp"
            android:radius="16dp"
            android:gravity="center"
            android:button="@null" />
        <CheckBox
            android:fontFamily="@font/gmarketsansmedium"
            android:id="@+id/toggleButton5"
            android:layout_width="71dp"
            android:layout_height="36dp"
            android:text="사이다"
            android:textColor="#D1D1D1"
            android:background="@drawable/toggle_button_background"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:textSize="16dp"
            android:radius="16dp"
            android:gravity="center"
            android:button="@null" />

        <CheckBox
            android:fontFamily="@font/gmarketsansmedium"
            android:id="@+id/toggleButton6"
            android:layout_width="71dp"
            android:layout_height="36dp"
            android:text="룸노크"
            android:textColor="#D1D1D1"
            android:background="@drawable/toggle_button_background"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:textSize="16dp"
            android:radius="16dp"
            android:gravity="center"
            android:button="@null" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#A4A4A4"
        android:text="요청사항"
        android:fontFamily="@font/gmarketsansmedium"
        android:textSize="12dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="22dp"/>

    <EditText
        android:layout_width="312dp"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/toggle_button_background"
        android:gravity="top|left"
        android:hint="요청하실 사항을 적어주세요."
        android:padding="10dp"
        android:textColorHint="#D1D1D1"
        android:textSize="14dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/round_button_3"
        android:id="@+id/button_select"
        android:layout_width="328dp"
        android:layout_height="68dp"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="108dp"
        android:textColor="#FBFBFB"
        android:text="작성하기"
        android:textSize="16dp"
        android:fontFamily="@font/gmarketsansmedium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</LinearLayout>