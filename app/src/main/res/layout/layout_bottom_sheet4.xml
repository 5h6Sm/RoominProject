<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/choosetxt"
        android:textAlignment="center"
        android:text="서비스 요청서"
        android:textColor="#494949"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:fontFamily="@font/gmarketsansmedium"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="10dp"
        android:textColor="#A4A4A4"
        android:text="시간 선택"
        android:textSize="12dp"
        android:fontFamily="@font/gmarketsansmedium"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <NumberPicker
            android:id="@+id/day_datepicker"
            android:layout_width="80dp"
            android:layout_height="124dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:theme="@style/NumberPicker" />

        <NumberPicker
            android:id="@+id/hour_datepicker"
            android:layout_width="50dp"
            android:layout_height="124dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:theme="@style/NumberPicker" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="124dp"
            android:fontFamily="@font/gmarketsansmedium"
            android:gravity="center"
            android:text=":"
            android:textSize="18dp" />

        <NumberPicker
            android:id="@+id/minute_datepicker"
            android:layout_width="50dp"
            android:layout_height="124dp"
            android:layout_gravity="right"
            android:theme="@style/NumberPicker" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도착 희망 위치"
        android:textColor="#A4A4A4"
        android:fontFamily="@font/gmarketsansmedium"
        android:layout_marginLeft="29dp"
        android:textSize="12dp"/>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/textinput1"
            android:padding="10dp"
            android:gravity="top|left"
            android:layout_gravity="center"
            android:background="@drawable/toggle_button_background"
            android:layout_width="312dp"
            android:layout_height="100dp"
            android:hint="예) 압구정역, 도쿄역"
            android:textColorHint="#D1D1D1"
            android:layout_marginTop="10dp"
            android:textSize="14dp"
            />



    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#A4A4A4"
        android:text="요청사항"
        android:fontFamily="@font/gmarketsansmedium"
        android:textSize="12dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="22dp"/>
    <EditText
        android:id="@+id/textinput2"
        android:padding="10dp"
        android:gravity="top|left"
        android:layout_gravity="center"
        android:background="@drawable/toggle_button_background"
        android:layout_width="312dp"
        android:layout_height="180dp"
        android:hint="요청하실 사항을 적어주세요."
        android:textColorHint="#D1D1D1"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="-25dp"
        android:layout_marginRight="15dp"
        android:hint="글자 수가 표시될 자리 입니다." />
    <TextView
        android:id="@+id/text_edit_noice"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="184dp"
        android:layout_height="32dp"
        android:background="@drawable/toggle_button_background"
        android:fontFamily="@font/gmarketsansmedium"
        android:textSize="12dp"
        android:layout_marginTop="18dp"
        android:text="위와 같이 작성하시겠습니까?"/>

    <androidx.appcompat.widget.AppCompatButton
        android:background="@drawable/round_button_3"
        android:id="@+id/button_select2"
        android:layout_width="328dp"
        android:layout_height="68dp"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:textColor="#FBFBFB"
        android:text="완료"
        android:textSize="16dp"
        android:fontFamily="@font/gmarketsansmedium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</LinearLayout>