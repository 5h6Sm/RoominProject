<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RadioGroup
            android:checkedButton="@+id/offer"
            android:id="@+id/toggle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@drawable/pink_out_line"
            android:orientation="horizontal">

            <RadioButton
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="1dp"
                android:id="@+id/on"
                android:background="@drawable/toggle_widget_background"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:text="체크인"
                android:textColor="#A4A4A4"
                android:radius="10dp" />


            <RadioButton
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/offer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:gravity="center"
                android:text="체크 아웃"
                android:textColor="@color/white" />
        </RadioGroup>


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="300dp"
                android:layout_height="332dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/rectangle_1174__stroke_"
            android:gravity="right"
            android:text="루민이 알려주는 체크인 팁 보러가기 "></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="97dp"
                android:layout_height="104dp"

                android:backgroundTint="#FBFBFB"
                android:drawableBottom="@drawable/hotel"
                android:text="호텔 등록"
                android:textColor="@color/black"></Button>

            <Button
                android:layout_width="97dp"
                android:layout_height="104dp"
                android:layout_marginLeft="35dp"
                android:backgroundTint="#FBFBFB"
                android:drawableBottom="@drawable/passport"
                android:text="여권 등록"
                android:textColor="@color/black"></Button>

            <Button
                android:layout_width="97dp"
                android:layout_height="104dp"
                android:layout_marginLeft="35dp"
                android:backgroundTint="#FBFBFB"
                android:drawableBottom="@drawable/card"
                android:text="카드 등록"
                android:textColor="@color/black"></Button>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
