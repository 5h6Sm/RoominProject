<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/movemainpage"
            android:layout_width="106dp"
            android:layout_height="29dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/logocolor" />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/alramnon" />
    </LinearLayout>

    <RadioGroup
        android:checkedButton="@+id/offer"
        android:id="@+id/toggle"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="50dp"
        android:layout_gravity="center"
        android:layout_marginRight="50dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@drawable/out_line"
        android:orientation="horizontal">

        <RadioButton
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:id="@+id/search"
            android:background="@drawable/toggle_widget"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="체크인"
            android:textColor="#A4A4A4" />

        <RadioButton
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:id="@+id/offer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/toggle_widget"
            android:button="@null"
            android:gravity="center"
            android:text="체크 아웃"
            android:textColor="@color/white" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="체크아웃"
        android:layout_marginLeft="20dp"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:fontFamily="@font/gmarketsansbold">
    </TextView>

    <LinearLayout
        android:layout_width="400dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_gravity="center"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="#FFFFFF"
            android:drawableBottom="@drawable/in_button_clock"
            android:text="시간 변경"
            android:textColor="@color/black"></Button>

        <Button
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginLeft="12dp"
            android:backgroundTint="#FFFFFF"
            android:drawableBottom="@drawable/in_button_airplane"
            android:text="미리 체크아웃"
            android:textColor="@color/black"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="내 서비스 명세표"
            android:layout_marginLeft="20dp"
            android:textSize="28dp"
            android:textColor="@color/black"
            android:fontFamily="@font/gmarketsansbold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:gravity="center">
            <TextView
                android:layout_width="300dp"
                android:layout_height="46dp"
                android:gravity="center"
                android:text="2023.02.03 ~ 2023.02.17"
                android:textColor="#494949"
                android:textSize="19dp"
                android:fontFamily="@font/gmarketsansmedium"/>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="17dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/gmarketsansmedium"
                    android:text="이용한 서비스"/>
                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="75dp"
                    android:orientation="horizontal">
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/call" />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/drink" />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/meal" />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bed" />
                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/umbrella2" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#A4A4A4"
                        android:textSize="18dp"
                        android:fontFamily="@font/gmarketsansmedium"
                        android:text="합계"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:fontFamily="@font/gmarketsansbold"
                        android:textColor="#494949"
                        android:text="73,000원"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_gravity="right"
                android:text="2023.02.04 기준 환율"
                android:textSize="15dp"
                android:fontFamily="@font/gmarketsansmedium"
                android:textColor="#A4A4A4"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:background="@drawable/details" />

        <Button
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:background="@drawable/payment" />
    </LinearLayout>

</LinearLayout>