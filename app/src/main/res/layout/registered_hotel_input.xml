<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisteredHotel">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0">

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_weight="0"
                        android:background="#ffffff"
                        android:src="@drawable/arrow"

                        />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:text="호텔 등록"
                        android:textStyle="bold"
                        android:fontFamily="@font/gmarketsansmedium"
                        android:textSize="15dp"
                        />
                </FrameLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:src="@drawable/stroke2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:gravity="center|left"
                android:paddingLeft="30dp"
                android:text="예약하신 호텔의 주소 또는\n
이름을 입력해주세요!"
                android:fontFamily="@font/gmarketsansmedium"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_coner_view"
                        android:hint="예)ㄱ,괌"
                        android:paddingLeft="15dp"
                        android:layout_marginBottom="15dp"
                        android:fontFamily="@font/gmarketsansmedium"
                        android:id="@+id/map_input"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/button2"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0"
                    android:text="검색"
                    app:cornerRadius="30px"
                    android:backgroundTint="#494949"
                    android:background="@drawable/round_button_3"
                    android:textColor="#fff"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text=" 도로명 예) 무학로 33, 도산대로 8길 23\n\n
동주소 예) 연희동 42-18\n\n
건물명 예) 역삼동 푸르지오"
                android:fontFamily="@font/gmarketsansmedium"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>